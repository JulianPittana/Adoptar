@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @if (ViewBag.Fichas != null)
    {
        foreach (Adoptar.Models.Ficha ficha in ViewBag.Fichas)
        {
            <div class="col-md-3">
                <a href="@Url.Action("MostrarUno", "Home", new { id = @ficha.ID })">
                    <div class="panel panel-primary ss">


                        <div class="panel-body ima"><img src="@ficha.Imagen" class="img-responsive img-thumbnail" alt="Image"></div>
                        <div class="panel-heading"><h2>@ficha.Nombre</h2></div>
                        <div class="panel-footer">
                            <p>@ficha.Ubicacion</p>
                            <p>@ficha.Sexo,@ficha.Edad</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    }
</div>