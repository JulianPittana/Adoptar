<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.title</title>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    @System.Web.Optimization.Styles.Render("~/bundle/css")
</head>
<body>
    <!-- Barra de navegación -->


    <nav class="navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("Mostrar", "Home")">Adoptar</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Buscar", "Home")">Buscar Mascotas</a></li>
                    <li><a href="@Url.Action("Agregar", "Home")">Dar en adopcion</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <!--<li><a href="#" onclick="bienvenida();" role="button">Ingresar</a></li>p'-->
                    @if (Session["UsuarioLogueado"] != null)
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span id="nombreUsuario">@(((Adoptar.Models.Usuario)Session["UsuarioLogueado"]).Nombre)</span> <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Mismascotas","Home")">Mis Mascotas</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a id="salir" href="@Url.Action("Logout","Usuarios")">Salir</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li id="Registrarse"><a href="@Url.Action("Registrar","Usuarios")" role="button"><span class="glyphicon glyphicon-pencil "></span> Registrarse</a></li>
                        <li id="ingresar"><a href="@Url.Action("Login","Usuarios")" role="button"> <span class="glyphicon glyphicon-user"></span> Ingresar</a></li>

                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
        <hr class="navhr"/>
    </nav>
    @RenderBody()

    <footer class="container-fluid text-center">
        <div class="col-md-1 col-md-offset-9"><img src="~/Content/img/003-facebook-logo.png" class="img-responsive " alt="Image"></div>
        <div class="col-md-1"><img src="~/Content/img/002-twitter-logo-silhouette.png" class="img-responsive "alt="Image"></div>
        <div class="col-md-1"><img src="~/Content/img/001-instagram-social-network-logo-of-photo-camera.png" class="img-responsive " alt="Image"></div>  
    </footer>
   @System.Web.Optimization.Scripts.Render("~/bundle/js")

</body>
</html>